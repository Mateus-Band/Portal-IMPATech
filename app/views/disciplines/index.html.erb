<% content_for :title, "Disciplinas - Portal IMPA Tech" %>

<h1 class="text-2xl font-bold text-blue-700 mb-6">Disciplinas</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @disciplines.each do |d| %>
    <%= link_to discipline_path(d[:slug]), 
        class: "block bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-sm p-4 rounded-lg hover:shadow-md transition" do %>
      <h3 class="text-lg font-semibold text-blue-700 dark:text-blue-400">
        <%= d[:name] %>
      </h3>
    <% end %>
  <% end %>
</div>